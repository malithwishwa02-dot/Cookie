{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Setup Oblivion",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/oblivion_setup.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Create Template",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/oblivion_core.py",
            "console": "integratedTerminal",
            "args": ["--template"]
        },
        {
            "name": "Python: Forge Profile (Example)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/oblivion_core.py",
            "console": "integratedTerminal",
            "args": ["--profile", "./example_profile", "--config", "oblivion_template.json"]
        },
        {
            "name": "Python: Import Profile (Example)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/oblivion_importer.py",
            "console": "integratedTerminal",
            "args": ["--import", "./example_profile", "--software", "multilogin"]
        }
    ]
}